{% extends 'base.html.twig' %}

{% block title %}Добавить статью{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/article.css') }}">
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
{% endblock %}

{% block body %}
  <div id="form-container" class="">
    <h3>Добавление статьи:</h3>
    <form action="{{ path('add_article') }}" method="post" enctype="multipart/form-data" name="add-article">
      <div class="border">
        <div class="bottom">
          <label for="categories">Выберите категорию: </label>
          <select id="categories" class="" name="categories">
            {% for categories in all_categories %}
              <option value="{{ categories.url }}" class="backgr">
                {{ categories.name }}
              </option>
            {% endfor %}
          </select>
        </div>
        <div class="bottom">
          <label>Название статьи:
            <input type="text" name="title" class="titleart" placeholder="Заполняйте это поле внимательно!">
          </label>
        </div>
        <div class="row form-group">
        <label for="text">Текст статьи</label>
        <input name="text" type="hidden">
        <div id="editor-container" name="text" >
          <p>write something interesting...</p>
        </div>
      </div>
      </div>

      <div class="center">
        <!-- <input type="submit" name="submit" value="Добавить статью"> -->
        <button class="btn btn-primary" type="submit">Добавить статью</button>
      </div>
    </form>
  </div>

{% endblock %}

{% block body_javascripts %}
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="{{ asset('js/editor.js') }}" charset="utf-8"></script>
{% endblock %}
