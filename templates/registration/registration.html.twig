{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/registration.css') }}"> {% endblock %}


{% block body %}

  <div class="flex tog">
    <h4 id="answer"></h4>
    <a href="{{ path('main') }}">Вернуться на главную</a>
  </div>

  <h3 class="flex color">Пожалуйста, заполните форму:</h3>

  <form class="" action="{{ path('register_user') }}" method="post">
    <fieldset>
      <label class="toptop">Введите ваш email:
        <input type="email" name="email" title="email" autofocus required placeholder="example@mail.com">
      </label>
      <label>Придумайте логин:
        <input type="text" name="login" title="Количество символов должно быть от 5 до 20" required placeholder="user123" minlength="5" maxlength="20">
      </label>
      <label>Придумайте пароль:
        <input type="password" name="password" id="password" placeholder="от 8 до 12 символов" title="Количество символов должно быть от 8 до 12" required minlength="8" maxlength="12">
      </label>
      <label>Подтвердите пароль:
        <input type="password" name="repeat_password" id="repeat_password" placeholder="от 8 до 12 символов" title="Количество символов должно быть от 8 до 12" required minlength="8" maxlength="12" onkeyup='check();'>
        <span class="attention" id='message'></span>
      </label>
      <label>Дата вашего рождения:
        <input id="date" type="date" name="date" required>
      </label>
      <label class="spam-mail"> Расскажите немного о себе:
        <textarea name="description" placeholder="..здесь могут быть ваши увлечения, краткая характеристика или то, о чем вам хочется рассказать больше всего"></textarea>
      </label>
      <label class="top">Загрузите аватар:
        <input type="file" name="picture" accept="image/*">
      </label>
      <div class="spam-mail">
        <p>Получать рассылку на указанный email?</p>
        <label>Да <input type="radio" name="back" value="Yes" checked> </label>
        <label>Нет <input type="radio" name="back" value="No"> </label>
      </div>
      <div class="agreeBut">
        <p class="font">Я ознакомлен(на) с правилами блога и <br> согласен(на) на обработку персональных данных: <input id="agree" name="agree" type="checkbox"></p>
      </div>
    </fieldset>

    <div id="togg" class="top tog flex">
      <span class="red">Заполните форму корректно!</span>
    </div>

    <div class="flex top">
      <div>
        <input class="reset" type="reset" value="Очистить">
        <input id="subm" class="submit" type="submit" value="Зарегистрироваться" disabled>
      </div>
    </div>
  </form>

  <a href="#" class="up-btn material-icons">arrow_upward</a>


{% endblock %}

{% block body_javascripts %} <script src="{{ asset('js/registration.js') }}" charset="utf-8"></script> {% endblock %}
