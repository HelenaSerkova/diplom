{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="{{ asset('css/main.css') }}"> {% endblock %}

{% block body %}
  <form action="{{ path('login_check') }}" class="flex" method="post">
      {% if error %}
          <div class="alert alert-danger acc"><h3>Произошла ошибка, проверьте логин и пароль.</h3> </div>
      {% endif %}

        <h3>Пожалуйста, введите ваши данные для входа:</h3>

        <label for="inputEmail">Email:</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Пароль:</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
        <button class="btn btn-lg btn-primary" type="submit"> Войти </button>

